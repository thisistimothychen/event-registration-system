<h1>All Events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Registration Limit</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.start_datetime.strftime("%b %d, %Y") %></td>
        <td><%= event.end_datetime.strftime("%b %d, %Y") %></td>
        <td><%= event.start_datetime.strftime("%H:%M") %></td>
        <td><%= event.end_datetime.strftime("%H:%M") %></td>
        <td><%= event.registration_limit %></td>
        <td><%= @users.find(event.user_id).email %></td>
        <td><%= link_to 'Show', event, class: "btn btn-default btn-sm" %></td>
        <% if @users.find(event.user_id) == current_user %>
          <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-default" %>
