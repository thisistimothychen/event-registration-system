<h1>Events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Registration Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.start_datetime.strftime("%b %d, %Y") %></td>
        <td><%= event.end_datetime.strftime("%b %d, %Y") %></td>
        <td><%= event.start_datetime.strftime("%H:%M") %></td>
        <td><%= event.end_datetime.strftime("%H:%M") %></td>
        <td><%= event.registration_limit %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-default" %>


<br />

<!-- Calendar Test Below -->

<div id="events">
  <%= calendar do |date| %>
    <%= date.day %>
    <% if @events_by_date[date.to_datetime] %>
      <ul>
        <% @events_by_date[date].each do |event| %>
          <li><%= link_to event.name, event %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
